{
  "name": "greeflas/php-static-analyzer",
  "description": "",
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Vladimir Kuprienko",
      "email": "vldmr.kuprienko@gmail.com",
      "role": "Maintainer"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.3",
    "phpdocumentor/reflection-docblock": "^4.3",
    "symfony/console": "^4.3",
    "symfony/finder": "^4.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14"
  },
  "autoload": {
    "psr-4": {
      "Greeflas\\StaticAnalyzer\\": "src/"
    }
  },
  "scripts": {
    "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
    "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi"
  },
  "config": {
    "sort-packages": true
  }
}
